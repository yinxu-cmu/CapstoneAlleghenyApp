<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:background="@drawable/background_bluegradient"
    android:orientation="vertical" >

    <!-- <ImageView
        android:id="@+id/check_pump_dialog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp" />
 -->

    <TextView
        android:id="@+id/check_pump_dialog_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_pump_dialog_text"
        android:textColor="#eec900"
        android:textSize="18sp" />

    <Button
        android:id="@+id/check_pump_dialog_input_barcode"
        android:layout_width="176dp"
        android:layout_height="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        android:text="Manual Input" 
        android:textColor="#eec900"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/check_pump_dialog_scan_barcode"
        android:layout_width="176dp"
        android:layout_height="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        android:text="Scan Barcode"
        android:textColor="#eec900"
        android:textStyle="bold" />

</LinearLayout>